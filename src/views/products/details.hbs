 <section id="details-page">
    <div class="main_card">
        <div class="card_left">
            <div class="card-details">

                <h1>Model: {{productData.model}}</h1>
                <h3>Posted by: {{ownerData.firstName}} {{ownerData.lastName}}</h3>

                <div class="card-specs">
                    <p class="card-manufacturer">Manufacturer: {{productData.manufacture}}</p>
                    <p class="card-engine">Engine Type: {{productData.engine}}</p>
                    <p class="card-top-speed">Top Speed: {{productData.topSpeed}}</p>
                </div>

                <p class="disc">
                    Description: {{productData.description}}
                </p>

                <!-- If there is no registered user, do not display buttons-->
                {{#if isAuthenticated}}
                <div class="social-btn">
                    {{#if showControls}}
                    <!-- Only for registered user and author of the post -->
                    <a href="/products/{{productData.id}}/edit" class="edit-btn">Edit</a>
                    <a href="/products/{{productData.id}}/delete" class="del-btn">Delete</a>
                    
                     {{else if isLiked}}
                       <p class="you-liked">Thanks For The Like</p>
                       {{else}}
                    <!-- logged in users, who have not yet liked-->
                    <a href="/products/{{productData.id}}/likes" class="like-btn">Like</a>
                    {{/if}}
                </div>
                {{/if}}

            </div>
        </div>
        <div class="card_right">
            <img src="{{productData.image}}" alt="{{productData.model}}">
        </div>
    </div>
</section>

<section id="likes">
    <div class="like-info">
        <div class="card_left">
            <div class="card-details">
                <h1>Likes</h1>
                <div class="card-like">
                    <!-- Show the rating of likes, if there are no likes yet, the number must be 0. -->
                    <p class="PV">Total likes: {{productData.likes.length}}</p>
                </div>
                 {{#if usersEmails}}
                 <p class="disc">People who liked the post - {{usersEmails}}</p>
                 {{else}}
                 <p class="disc">People who liked the post - No one has liked yet.</p>
                 {{/if}}
            </div>
        </div>
    </div>
</section>
